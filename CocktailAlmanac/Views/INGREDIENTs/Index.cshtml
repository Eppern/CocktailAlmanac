@using CocktailAlmanac.Helpers
@model IEnumerable<CocktailAlmanac.Models.INGREDIENT>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create").If(User.IsInRole("Mod"))
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AlcoholPercent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MEASUREMENT_UNIT.ShortName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AlcoholPercent)
        </td>
        <td>
            <img src="@Url.Content(item.ImageURL)" alt="Image" width=100 height=50 />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MEASUREMENT_UNIT.ShortName)
        </td>
        <td>
            @Html.ActionLink("Edit |", "Edit", new { id = item.IngredientId }).If(User.IsInRole("Mod"))
            @Html.ActionLink("Details", "Details", new { id = item.IngredientId })
            @Html.ActionLink("| Delete", "Delete", new { id = item.IngredientId }).If(User.IsInRole("Mod"))
        </td>
    </tr>
}

</table>
